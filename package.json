{
  "type": "module",
  "engines": {
    "node": ">=24.6.0"
  },
  "packageManager": "pnpm@10.16.1+sha512.0e155aa2629db8672b49e8475da6226aa4bdea85fdcdfdc15350874946d4f3c91faaf64cbdc4a5d1ab8002f473d5c3fcedcd197989cf0390f9badd3c04678706",
  "scripts": {
    "build": "node --run build:mermaid && node --run build:slides && node --run build:tex && pnpm -r build",
    "build:mermaid": "puppeteer browsers install chrome-headless-shell && tools/build_mermaid.sh",
    "build:slides": "node --run build:slides:html && node --run build:slides:pdf",
    "build:slides:html": "node --run marp -- --html",
    "build:slides:pdf": "node --run marp -- --pdf",
    "build:tex": "tools/build_tex.sh",
    "lint": "biome ci",
    "marp": "marp --allow-local-files --input-dir slides --parallel",
    "marp:serve": "node --run marp -- --server"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@marp-team/marp-cli": "^4.2.3",
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@raviqqe/biome-config": "^2.0.18",
    "puppeteer": "^24.23.0"
  }
}
