---
import Default from "./Default.astro";
---

<Default>
  <div class="header">
    <a href="/">raviqqe's documents</a>
  </div>
  <div class="content">
    <slot />
  </div>
</Default>
<style>
  .header {
    display: flex;
    justify-content: flex-start;
    align-self: stretch;
    padding: 0.5rem 1rem;
    box-sizing: border-box;

    > a {
      font-size: 1.2rem;
      font-weight: bold;
      color: white;
      text-decoration: none;

      &:visited {
        color: white;
      }
    }
  }

  .content {
    width: 100%;
    max-width: 42rem;
    padding: 1rem 1.2rem;
    box-sizing: border-box;
  }
</style>
