---
const basePath = Astro.site?.href;
---

<link href=`${basePath}/pagefind/pagefind-ui.css` rel="stylesheet" />
<script src=`${basePath}/pagefind/pagefind-ui.js` type="text/javascript"
></script>
<div id="search" class="ml-3 p-4"></div>
<script>
	window.addEventListener("DOMContentLoaded", () => {
		new PagefindUI({ element: "#search" });
	});
</script>
