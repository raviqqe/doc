{
  "name": "doc",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run build:notes && npm run build:posts && npm run build:slides && npm run build:toc && astro build",
    "build:slides": "npm run build:slides:html && npm run build:slides:pdf",
    "build:slides:html": "marp --input-dir ../slides --output public/slides",
    "build:slides:pdf": "marp --pdf --input-dir ../slides --output public/slides",
    "build:notes": "tsx src/scripts/build-directory.ts notes",
    "build:posts": "tsx src/scripts/build-directory.ts posts",
    "build:toc": "tsx src/scripts/build-table-of-contents.ts",
    "lint": "eslint src",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.0.3",
    "@astrojs/prefetch": "^0.4.1",
    "@astrojs/sitemap": "^3.0.4",
    "@marp-team/marp-cli": "^3.4.0",
    "@raviqqe/loscore": "^0.2.1",
    "astro": "^4.1.1",
    "glob": "^10.3.10",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@raviqqe/eslint-config": "^2.0.6",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
