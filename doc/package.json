{
  "name": "doc",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run build:slides && npm run build:posts && npm run build:toc && astro build",
    "build:slides": "npm run build:slides:html && npm run build:slides:pdf",
    "build:slides:html": "marp --html --input-dir ../slides --output public/slides",
    "build:slides:pdf": "marp --pdf --input-dir ../slides --output public/slides",
    "build:posts": "tsx src/scripts/build-posts.ts",
    "build:toc": "tsx src/scripts/build-table-of-contents.ts",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^1.1.0",
    "@astrojs/prefetch": "^0.4.0",
    "@astrojs/sitemap": "^3.0.0",
    "@marp-team/marp-cli": "^3.2.1",
    "@types/lodash": "^4.14.198",
    "astro": "^3.1.0",
    "glob": "^10.3.4",
    "lodash-unified": "^1.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.6.1",
    "tsx": "^3.12.10"
  }
}
