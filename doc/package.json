{
  "name": "doc",
  "type": "module",
  "version": "0.1.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run build:slides && npm run build:posts && npm run build:toc && astro build && pagefind --site dist",
    "build:slides": "npm run build:slides:html && npm run build:slides:pdf",
    "build:slides:html": "marp --input-dir ../slides --output public/slides",
    "build:slides:pdf": "marp --pdf --input-dir ../slides --output public/slides",
    "build:posts": "tsx src/scripts/build-posts.ts",
    "build:toc": "tsx src/scripts/build-table-of-contents.ts",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^1.1.0",
    "@astrojs/prefetch": "^0.4.1",
    "@astrojs/sitemap": "^3.0.0",
    "@marp-team/marp-cli": "^3.3.1",
    "astro": "^3.2.3",
    "glob": "^10.3.10",
    "lodash": "^4.17.21",
    "pagefind": "^1.0.3",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "@types/node": "^20.8.2",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  }
}
