{
  "name": "doc",
  "type": "module",
  "version": "0.1.0",
  "engines": {
    "node": ">=24.6.0"
  },
  "scripts": {
    "start": "astro dev",
    "build": "node --run build:notes && node --run build:posts && node --run build:slides && node --run build:toc && node --run build:papers && playwright install && astro build",
    "build:slides": "node --run build:slides:html && node --run build:slides:pdf",
    "build:slides:html": "marp --html --input-dir ../slides --output public/slides",
    "build:slides:pdf": "marp --pdf --html --input-dir ../slides --output public/slides",
    "build:notes": "node src/scripts/build-directory.ts notes",
    "build:posts": "node src/scripts/build-directory.ts posts",
    "build:papers": "cd .. && tools/build.sh",
    "build:toc": "node src/scripts/build-table-of-contents.ts",
    "lint": "biome ci",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/sitemap": "^3.5.0",
    "@fontsource-variable/noto-sans": "^5.2.7",
    "@fontsource/ubuntu": "^5.2.6",
    "@marp-team/marp-cli": "^4.2.3",
    "@raviqqe/loscore": "^0.2.12",
    "astro": "^5.13.2",
    "glob": "^11.0.3",
    "rehype-mermaid": "^3.0.0",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@raviqqe/biome-config": "^2.0.16",
    "@types/node": "^24.3.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "typescript": "^5.9.2"
  }
}
