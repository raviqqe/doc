{
  "name": "doc",
  "type": "module",
  "version": "0.1.0",
  "engines": {
    "node": ">=23.3.0"
  },
  "scripts": {
    "start": "astro dev",
    "build": "npm run build:notes && npm run build:posts && npm run build:slides && npm run build:toc && astro build",
    "build:slides": "npm run build:slides:html && npm run build:slides:pdf",
    "build:slides:html": "marp --html --input-dir ../slides --output public/slides",
    "build:slides:pdf": "marp --pdf --html --input-dir ../slides --output public/slides",
    "build:notes": "node src/scripts/build-directory.ts notes",
    "build:posts": "node src/scripts/build-directory.ts posts",
    "build:toc": "node src/scripts/build-table-of-contents.ts",
    "lint": "eslint src",
    "preview": "astro preview"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.0.8",
    "@astrojs/prefetch": "^0.4.1",
    "@astrojs/sitemap": "^3.2.1",
    "@fontsource-variable/noto-sans": "^5.1.1",
    "@fontsource/ubuntu": "^5.1.1",
    "@marp-team/marp-cli": "^4.1.1",
    "@raviqqe/loscore": "^0.2.12",
    "astro": "^5.3.0",
    "glob": "^11.0.1",
    "remark-mermaidjs": "^7.0.0",
    "remark-toc": "^9.0.0"
  },
  "devDependencies": {
    "@raviqqe/eslint-config": "^4.1.7",
    "@types/node": "^22.13.4",
    "eslint": "^9.21.0",
    "playwright": "^1.50.1",
    "prettier": "^3.5.1",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "typescript": "^5.7.3"
  }
}
